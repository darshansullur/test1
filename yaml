---
- name: This sets up an httpd webserver
  hosts: test
  tasks:
  - name: Install httpd packages
    yum:
      name: httpd
      state: present
  - name: start httpd service
    service:
      name: httpd
      state: started
  - name: copy home page
    copy:
      src: index.html
      dest: /var/www/html
  - name: restart httpd service
    service:
      name: httpd
      state: restarted

